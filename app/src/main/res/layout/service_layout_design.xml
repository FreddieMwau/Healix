<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serviceNumber"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="#S738927464"
        android:textSize="19sp"
        android:textColor="@color/blue"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:id="@+id/procedureName"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Root Canal Treatment"
        android:textSize="26sp"
        android:textColor="@color/light_grey"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/badge"
            android:layout_gravity="center_vertical"
            app:tint="@color/light_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:textStyle=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clientName"
                android:layout_marginTop="5dp"
                android:text="John Smith"
                android:textSize="20sp"
                android:textColor="@color/light_grey"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/male"
            android:layout_gravity="center_vertical"
            app:tint="@color/light_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:textStyle=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gender"
                android:layout_marginTop="5dp"
                android:text="Male"
                android:textSize="20sp"
                android:textColor="@color/light_grey"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/call"
            android:layout_gravity="center_vertical"
            app:tint="@color/light_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="16sp"
                android:textColor="@color/blue"
                android:textStyle=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/servicePhoneNumber"
                android:layout_marginTop="5dp"
                android:text="+254712345678"
                android:textSize="20sp"
                android:textColor="@color/light_grey"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Charge :"
            android:layout_centerVertical="true"
            android:textColor="@color/light_grey"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chargeAmount"
            android:text="Ksh 7,000"
            android:textSize="23sp"
            android:textColor="@color/blue"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteServiceBtn"
            android:text="Delete"
            android:textStyle="bold"
            android:textSize="17sp"
            android:paddingStart="30dp"
            android:textAllCaps="false"
            android:paddingEnd="30dp"
            android:textColor="@color/blue"
            android:background="@drawable/corner_button"
            android:backgroundTint="@color/white"
            android:layout_margin="20dp"
            android:onClick="onclick"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editServiceBtn"
            android:text="Edit"
            android:textStyle="bold"
            android:textSize="17sp"
            android:paddingStart="30dp"
            android:textAllCaps="false"
            android:paddingEnd="30dp"
            android:textColor="@color/colorBackground"
            android:background="@drawable/corner_button"
            android:backgroundTint="@color/blue"
            android:layout_margin="20dp"
            android:onClick="onclick"
            android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>