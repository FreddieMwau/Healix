<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/colorBackground"
    tools:context=".activity.ProfileActivity">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:cardUseCompatPadding="true"
       app:layout_constraintStart_toStartOf="parent"
android:layout_margin="5dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:cardCornerRadius="10dp">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp">
<ImageView
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:layout_marginTop="5dp"
    android:padding="2dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:src="@drawable/hospitalisation1"
    android:id="@+id/ivImg">


</ImageView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
             app:layout_constraintStart_toEndOf="@+id/ivImg"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/namePa"
               android:padding="2dp"
               android:layout_marginTop="5dp"
               android:textStyle="bold"
               android:text="Jane Doe">

           </TextView>



           <ImageView
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:layout_marginTop="8dp"
               android:padding="2dp"
               app:layout_constraintStart_toStartOf="parent"
               android:src="@drawable/procedure"
               app:layout_constraintTop_toBottomOf="@+id/ivImg"
               android:id="@+id/ivConImg">


           </ImageView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               app:layout_constraintStart_toEndOf="@+id/ivConImg"
android:padding="2dp"
               app:layout_constraintTop_toBottomOf="@+id/ivImg"
               android:textStyle="bold"
               android:id="@+id/consTv"
               android:text="Consultation">

           </TextView>





           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Total"
               android:id="@+id/totalTv"
               android:layout_marginEnd="5dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toStartOf="@+id/totalvalueTv"


               >

           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Ksh 900000"
               android:textStyle="bold"
               android:textSize="22dp"
               android:textColor="@color/yellow"
               android:id="@+id/totalvalueTv"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent">

           </TextView>


       </androidx.constraintlayout.widget.ConstraintLayout>


   </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
