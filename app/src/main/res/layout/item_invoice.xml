<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/colorBackground"
    tools:context=".activity.ProfileActivity">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardUseCompatPadding="true"
       app:layout_constraintTop_toTopOf="parent"

       app:layout_constraintStart_toStartOf="parent"
android:layout_margin="5dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:cardCornerRadius="10dp">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="INV 001"
               android:textSize="16dp"
               android:textStyle="bold"
               android:drawableTint="@color/red"
               android:drawablePadding="5dp"
               android:drawableStart="@drawable/circle"
               android:textColor="@color/colorOnSecondary"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/invTitle"></TextView>

           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="5dp"
               android:layout_marginEnd="15dp"
               android:id="@+id/imgHospital"
               android:padding="5dp"
               android:src="@drawable/hospitalisation"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toTopOf="@+id/imginsurance"
               app:layout_constraintTop_toBottomOf="@+id/invTitle"
              ></ImageView>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Hospital"
               android:id="@+id/namesubHos"
               android:textSize="12dp"
               android:layout_marginTop="10dp"
               app:layout_constraintTop_toBottomOf="@+id/invTitle"
               app:layout_constraintBottom_toTopOf="@+id/nameTvHos"
               app:layout_constraintStart_toEndOf="@+id/imgHospital"

               ></TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Nairobi Hospital"
               android:id="@+id/nameTvHos"
               android:textSize="16dp"
               android:textStyle="bold"
               android:textColor="@color/colorOnSecondary"
               android:layout_marginTop="15dp"
               android:gravity="center_vertical"

               app:layout_constraintTop_toBottomOf="@+id/invTitle"
               app:layout_constraintStart_toEndOf="@+id/imgHospital"

             ></TextView>


           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="15dp"
               android:id="@+id/imginsurance"
               app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/healthinsurance"
               android:padding="5dp"
               app:layout_constraintTop_toBottomOf="@+id/imgHospital"
               ></ImageView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Insurance Cover"
               android:id="@+id/namesubins"
               android:layout_marginTop="10dp"
               android:textSize="12dp"
               app:layout_constraintTop_toBottomOf="@+id/imgHospital"
               app:layout_constraintBottom_toTopOf="@+id/nameTvIns"
               app:layout_constraintStart_toEndOf="@+id/imginsurance"

               ></TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sanlam Insurance"
               android:id="@+id/nameTvIns"
               android:gravity="center_vertical"
               android:textColor="@color/colorOnSecondary"
              android:layout_marginTop="15dp"
               android:textSize="16dp"
               android:textStyle="bold"
               app:layout_constraintTop_toBottomOf="@+id/imgHospital"
               app:layout_constraintStart_toEndOf="@+id/imginsurance"

               ></TextView>



           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="02/03/2023 03:34 am"
               android:textSize="10dp"
               app:layout_constraintEnd_toEndOf="parent"
               android:textColor="@color/colorOnSecondary"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/invDate"></TextView>


           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="wrap_content"
               android:layout_height="40dp"
               android:text="Paid"
               android:textSize="12dp"
               android:textColor="@color/white"
               android:backgroundTint="@color/green"
               android:background="@drawable/corner_button"
               app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toTopOf="@+id/totalTv"
               app:layout_constraintTop_toBottomOf="@+id/invDate"
               android:id="@+id/paidBtn"></androidx.appcompat.widget.AppCompatButton>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Total"
    android:layout_marginEnd="5dp"
    android:id="@+id/totalTv"
    android:textSize="13dp"
    android:textColor="@color/colorOnSecondary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/totalvalueTv"


    >

</TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Ksh 900000"
               android:textStyle="bold"
               android:textSize="18dp"
               android:layout_marginBottom="-32dp"
               android:textColor="@color/yellow"
               android:id="@+id/totalvalueTv"
               app:layout_constraintBottom_toBottomOf="@id/paidBtn"
               app:layout_constraintEnd_toEndOf="parent">

           </TextView>



       </androidx.constraintlayout.widget.ConstraintLayout>



   </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
